@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>React-Select Example</title>
    <link rel="stylesheet" href="~/Scripts/search/select.css">
    <!--  added to prevent React undefined exception, TKJ 270517 -->
    <script src="~/Scripts/react/react.js"></script> 
    <script src="~/Scripts/react/react-dom.js"></script>
    <!--  added to prevent React undefined exception, TKJ 270517 -->
</head>

<body>
    <div class="container">
        <h1 style="margin-top: 40px;">React Select</h1>
        <div id="select" style="margin: 20px 0;"></div>
    
    </div>
    <!-- ReactSelect -->

 
    <script src="~/Scripts/search/CustomersSelect.jsx"></script>
    <script>
        ReactDOM.render(
            React.createElement(CustomersSelect, {
                url: '/hydocs/api/Customers',
                onChange: this.updateValue,
             
            }),
			document.getElementById('select')
		);
    </script>
</body>
</html>